# Sentiment Event Backend - Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# ============================================
# Twitter API Credentials (Twikit)
# ============================================
# For manual cookie-based scraping (main implementation)
TWITTER_COOKIE_HEADER=your_twitter_cookie_header_here
TWITTER_COOKIE_FILE=
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# ============================================
# Twitter API Credentials (Legacy)
# ============================================
# For bearer token authentication (kept for compatibility)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# ============================================
# Reddit API Credentials
# ============================================
# Get these from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=SentimentEventBackend/1.0 (by /u/YourRedditUsername)

# ============================================
# Lava Gateway API Credentials
# ============================================
# For generating LLM-powered sentiment summaries
# Get your API key from: https://www.lavagateway.com
LAVA_API_KEY=your_lava_gateway_api_key_here
LAVA_BASE_URL=https://api.lavagateway.com/v1

# ============================================
# Facebook API Credentials
# ============================================
# Get these from: https://developers.facebook.com/apps
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ============================================
# Application Settings
# ============================================
SCRAPE_KEYWORD=
SCRAPE_LIMIT=100
MIN_PROBABILITY=0.05
DATABASE_URL=sqlite:///data/tweets.db
