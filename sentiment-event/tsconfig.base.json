{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
  "lib": ["ES2021"],
  "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@pkg/shared/*": ["packages/shared/src/*"],
      "@pkg/schemas": ["packages/schemas/src"],
      "@pkg/schemas/*": ["packages/schemas/src/*"],
      "@pkg/adapters": ["packages/adapters/src"],
      "@pkg/adapters/*": ["packages/adapters/src/*"],
      "@app/types": ["packages/schemas/src"],
      "@app/config": ["packages/shared/src/config"],
      "@app/utils/*": ["packages/shared/src/utils/*"],
      "@pkg/shared": ["packages/shared/src"]
    }
  }
}
